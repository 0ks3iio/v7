<script>
	var titleNum = 0;
	var answer = "";
	var scoreC = 0;
	var scoreR = 0;
	var scoreI = 0;
	var scoreA = 0;
	var scoreS = 0;
	var scoreE = 0;

	function selectResult(objthis) {
		$(objthis).attr('class','btn btn-blue btn-sm selOne').siblings().attr('class','btn btn-white btn-sm');
		titleNum = $(".selOne").size();
		$("#titleNum").text(titleNum+"/60");
		if (titleNum == 60) {
			$("#submit").attr('class','btn btn-blue').removeAttr('disabled');
		}
	}
	
	var isSubmit = false;
	function submitResult() {
		if (isSubmit) {
			return;
		}
		
		$(".selOne").each(function(){
    		var value = $(this).val().split("-");
    		answer += "," + value[0];
    		if (value[1] == "C") {
    			scoreC += parseInt(value[2]);
    		} else if (value[1] == "R") {
    			scoreR += parseInt(value[2]);
    		} else if (value[1] == "I") {
    			scoreI += parseInt(value[2]);
    		} else if (value[1] == "A") {
    			scoreA += parseInt(value[2]);
    		} else if (value[1] == "S") {
    			scoreS += parseInt(value[2]);
    		} else {
    			scoreE += parseInt(value[2]);
    		}
  		});
  		
  		answer = answer.substring(1);
  		$("#answer").val(answer); 
  		$("#scoreC").val(scoreC);
  		$("#scoreR").val(scoreR);
  		$("#scoreI").val(scoreI);
  		$("#scoreA").val(scoreA);
  		$("#scoreS").val(scoreS);
  		$("#scoreE").val(scoreE);
  		
  		$("#resultType").val("C-"+scoreC+",R-"+scoreR+",I-"+scoreI+",A-"+scoreA+",S-"+scoreS+",E-"+scoreE);
  		
  		isSubmit = true;
  		var options = {
			url : "${request.contextPath}/careerplan/student/testresult/save",
			dataType : 'json',
			success : function(data){
		 		if(!data.success){
		 			layerTipMsg(data.success,"保存失败",data.msg);
		 			isSubmit = false;
		 		}else{
					showStuResult();
    			}
			},
			clearForm : false,
			resetForm : false,
			type : 'post',
			error:function(XMLHttpRequest, textStatus, errorThrown){}//请求出错 
		};
		$("#resultForm").ajaxSubmit(options);
	}
</script>